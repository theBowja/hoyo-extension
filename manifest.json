{
  "manifest_version": 3,
  "name": "HoYoBridge",
  "version": "1.0.0",
  "description": "Universal data bridge for HoYoVerse games. Export Genshin Impact, ZZZ, and HSR data to tools like Genshin Optimizer.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://act.hoyolab.com/*",
    "https://sg-public-api.hoyolab.com/*",
    "https://frzyc.github.io/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "48": "src/icons/icon-48.png",
      "128": "src/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon-16.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://act.hoyolab.com/app/community-game-records-sea/*"
      ],
      "js": [
        "src/scripts/content.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://frzyc.github.io/genshin-optimizer/*"
      ],
      "js": [
        "src/scripts/genshin-optimizer.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/scripts/interceptor.js",
        "src/converters/parsers/genshin-parser.js",
        "src/converters/formatters/good-formatter.js"
      ],
      "matches": [
        "https://act.hoyolab.com/*"
      ]
    }
  ]
}