{
    "name": "data-bridge-extension",
    "version": "1.0.0",
    "description": "Cross-browser extension for capturing and bridging JSON request payloads",
    "scripts": {
        "build": "npm run build:chrome && npm run build:firefox",
        "build:chrome": "powershell -Command \"Compress-Archive -Path manifest.json,src,LICENSE,README.md -DestinationPath build/data-bridge-chrome.zip -Force\"",
        "build:firefox": "powershell -Command \"Compress-Archive -Path manifest.json,src,LICENSE,README.md -DestinationPath build/data-bridge-firefox.zip -Force\"",
        "clean": "powershell -Command \"Remove-Item -Path build/* -Force -ErrorAction SilentlyContinue\"",
        "lint": "echo 'Linting not configured yet'",
        "test": "echo 'Tests not configured yet'"
    },
    "keywords": [
        "browser-extension",
        "chrome-extension",
        "firefox-addon",
        "data-capture",
        "api-interceptor"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {},
    "repository": {
        "type": "git",
        "url": ""
    }
}